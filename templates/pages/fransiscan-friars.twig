{% extends "pages/post-base.twig" %}

{% block post %}
	<section class='row intro s-top center s-bottom no-gutters'>
	 	<div class='row-inner'>
	 		<div class='col text'>
	 		 	<div class='col-inner'  data-aos="fade-up">
	 		 		{{ ui.p(page.intro_text) }}
	 		 	</div>
	 		</div>
	 	</div>
	</section>

	<section class='row website s-top s-bottom no-gutters'>
	 	<div class='row-inner'>
	 		<div class='col info fixed-scroll col-6'>
	 		 	<div class='col-inner'>
	 		 		{# {{ ui.p(page.description) }} #}
	 		 		<div class="text-wrapper" data-aos="fade-in">
	 		 			<p>{{ page.description }}</p>
	 		 		</div>
	 		 	</div>
	 		</div>

	 		<div class='col image col-6'>
	 		 	<div class='col-inner'  data-aos="fade-in">
	 		 		{{ ui.img(page.website_page, "box-shadow") }}
	 		 	</div>
	 		</div>
	 	</div>
	</section>

	<section class='row mobile s-bottom lrg-gutters'>
	 	<div class='row-inner'>
	 		<div class='col col-12'>
	 		 	<div class='col-inner'>
	 		 		<div class="image-wrapper">
	 		 			{% for item in page.get_field('mobile_shots') %}
	 		 				<div data-aos="fade-in" class="image-item">
	 		 					{{ ui.img(item.image, "box-shadow") }}
	 		 				</div>
	 		 			{% endfor %}
	 		 		</div>
	 		 	</div>
	 		</div>
	 	</div>
	</section>

	<section class='row center responsive s-bottom no-gutters'>
	 	<div class='row-inner'>
	 		<div class='col text'>
	 		 	<div class='col-inner' data-aos="fade-up">
	 		 		{{ ui.p(page.responsive) }}
	 		 	</div>
	 		</div>
	 	</div>
	</section>

	<section class='row tablet'>
	 	<div class='row-inner'>
	 		<div class='col col-12'>
	 		 	<div class='col-inner'>
	 		 		<div class="image-wrapper">
	 		 			{% for item in page.get_field('tablet_images') %}
	 		 				{# {{ ui.img(item.image, "box-shadow") }} #}
	 		 				<div class="img-wrapper box-shadow" data-aos="fade-in">
								<img src="{{ TimberImage(item.image).src }}" alt="{{ TimberImage(item.image).alt }}">
							</div>
	 		 			{% endfor %}
	 		 		</div>
	 		 	</div>
	 		</div>
	 	</div>
	</section>

	{% include 'partial/color.twig' %}

{% endblock %}