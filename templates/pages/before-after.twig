{% extends "base.twig" %}
{% import 'partial/ui.twig' as ui %}

{% block content %}
	<section class='row center before-after'>
	 	<div class='row-inner'>
	 		<div class='col 12'>
	 		 	<div class='col-inner'>
	 		 		<div class="text-wrapper" data-aos="fade-up">
	 		 			<p>Drag the white bar to compare the before/after images.</p>
	 		 		</div>
					{% for item in page.get_field('image') %}
						<div class="item-wrapper" {% if loop.index == 1 %}data-aos="fade-in"{% endif %}>
							<div style="display: none;">
								<img src="{{ TimberImage(item.before).src }}" alt="Before">
							</div>
							<div>
								<img src="{{ TimberImage(item.after).src }}" alt="After">
							</div>
						</div>
					{% else %}
						{{ ui.h3('There are no items right now.') }}
					{% endfor %}
	 		 	</div>
	 		</div>
	 	</div>
	</section>
{% endblock %}
