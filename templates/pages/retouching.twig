{% extends "base.twig" %}
{% import 'partial/ui.twig' as ui %}

{% block content %}
	<section class='row retouching'>
	 	<div class='row-inner'>
	 		{% for item in page.get_field('images') %}
	 			<article class="retouched width-{{ item.width }}" data-retina="true" data-slide-Number="{{ item.number_in_gallery }}">
	 				<a href="{{site.url}}/{{ item.gallery_associated_with }}/#{{ item.number_in_gallery }}">
	 					{{ ui.img(item.normal_display) }}
	 				</a>
	 			</article>
	 		{% else %}
	 			<h3>There are no images at the moment.</h3>
	 		{% endfor %}
	 	</div>
	</section>
{% endblock %}
